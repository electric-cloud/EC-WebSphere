<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#StopMiddlewareServer</help>
    <formElement>
        <label>Config Name:</label>
        <property>configname</property>
        <type>entry</type>
        <required>1</required>
        <documentation>Name of configuration</documentation>
        <configuration>1</configuration>
    </formElement>
    <formElement>
        <label>Server List:</label>
        <property>wasServersList</property>
        <type>textarea</type>
        <required>1</required>
        <documentation>Server List to be stopped.</documentation>
    </formElement>
    <!-- TODO: Change it to select when error handling policy will be defined -->
    <formElement>
        <label>Error handling:</label>
        <property>wasErrorHandling</property>
        <type>select</type>
        <value>WARNING</value>
        <required>1</required>
        <option><name>Warnings are ignored</name><value>SUCCESS</value></option>
        <option><name>All warnings are warnings</name><value>WARNING</value></option>
        <option><name>All warnings are fatal</name><value>FATAL</value></option>
        <documentation>Error handling mechanism</documentation>
    </formElement>
    <formElement>
        <label>Wait time:</label>
        <property>wasWaitTime</property>
        <type>entry</type>
        <value>300</value>
        <required>0</required>
        <documentation>Maximum duration of check application state retries.</documentation>
    </formElement>
</editor>
