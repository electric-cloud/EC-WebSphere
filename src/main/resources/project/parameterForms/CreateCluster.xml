<editor>
    <help>/commander/pages/@PLUGIN_NAME@/@PLUGIN_KEY@_help?s=Administration&amp;ss=Plugins#CreateCluster</help>
    <formElement>
        <type>entry</type>
        <label>Configuration Name:</label>
        <!-- Improvements for CEV-18687 -->
        <configuration>1</configuration>
        <!-- End of improvements for CEV-18687 -->
        <property>configname</property>
        <propertyReference>/plugins/@PLUGIN_NAME@/project/websphere_cfgs</propertyReference>
        <documentation>Name of the configuration to be used. URL, port and credentials are retrieved from the given configuration. To view or create a new configuration, go to the Administration -> Plugins tab, and select 'Configure' action for @PLUGIN_KEY@ plugin.</documentation>
        <htmlDocumentation>Name of the configuration to be used. URL, port and credentials are retrieved from the given configuration.<br/><br/>A Configuration defines connection details and can be created by going to plugin <a style="text-decoration: none !important; border-bottom-style: dashed; border-bottom-width: thin; font-size: inherit; color: inherit; font-family: inherit; border-color: #d8d8d8; border-spacing: 2px;" target="_blank" href="/commander/pages/@PLUGIN_NAME@/configurations">configuration page</a>.</htmlDocumentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Cluster Name:</label>
        <property>clusterName</property>
        <required>1</required>
        <documentation>Name of the new cluster.</documentation>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Node Name:</label>
        <property>nodeName</property>
        <required>1</required>
        <documentation>Name of the new cluster.</documentation>
    </formElement>
    <formElement>
        <type>select</type>
        <label>1st cluster member type:</label>
        <property>firstClusterMemberType</property>
        <required>1</required>
        <!-- <value></value> -->
        <value>none</value>
        <option><name>None</name><value>none</value></option>
        <option><name>From Template</name><value>template</value></option>
        <option><name>From Existing Server</name><value>server</value></option>
        <documentation>Name of the new cluster.</documentation>
    </formElement>
    <formElement>
        <type>header</type>
        <label>First Member Section</label>
        <property>headerType</property>
        
        <condition>${firstClusterMemberType} != 'none' AND ${firstClusterMemberType} != ''</condition>
        <!-- <condition>${firstClusterMemberType} != ''</condition> -->
        <dependsOn>firstClusterMemberType</dependsOn>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>First Cluster Member Name:</label>
        <property>firstClusterMemberName</property>
        <required>0</required>
        <documentation>Name of the first cluster member server.</documentation>
        <condition>${firstClusterMemberType} != 'none' AND ${firstClusterMemberType} != ''</condition>
        <!-- <condition>${firstClusterMemberType} != ''</condition> -->
        <dependsOn>firstClusterMemberType</dependsOn>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Template Name:</label>
        <property>firstClusterMemberTemplateName</property>
        <required>0</required>
        <documentation>Template</documentation>
        <condition>${firstClusterMemberType} == 'template'</condition>
        <dependsOn>firstClusterMemberType</dependsOn>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Server Name:</label>
        <property>firstClusterMemberServerName</property>
        <required>0</required>
        <documentation>Server</documentation>
        <condition>${firstClusterMemberType} == 'server'</condition>
        <dependsOn>firstClusterMemberType</dependsOn>
    </formElement>
</editor>
