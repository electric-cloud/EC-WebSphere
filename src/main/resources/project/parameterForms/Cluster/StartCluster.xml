<editor>
    <help>https://docs.cloudbees.com/docs/cloudbees-cd/latest/plugins/ec-websphere#StartCluster</help>

    <formElement>
        <type>entry</type>
        <label>Configuration Name:</label>
        <!-- Improvements for CEV-18687 -->
        <configuration>1</configuration>
        <!-- End of improvements for CEV-18687 -->
        <property>configName</property>
        <propertyReference>/plugins/@PLUGIN_NAME@/project/websphere_cfgs</propertyReference>
        <documentation>Name of the configuration to be used. URL, port and credentials are retrieved from the given configuration. To view or create a new configuration, go to the Administration -> Plugins tab, and select 'Configure' action for @PLUGIN_KEY@ plugin.</documentation>
        <htmlDocumentation>Name of the configuration to be used. URL, port and credentials are retrieved from the given configuration.</htmlDocumentation>
        <required>1</required>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Cluster Name:</label>
        <property>wasClusterName</property>
        <documentation>Name of the cluster to be started.</documentation>
        <required>1</required>
        <propertyReference>/plugins/@PLUGIN_NAME@/project/ec_discovery/discovered_data/$configName/clusterName</propertyReference>
    </formElement>
    <formElement>
        <type>entry</type>
        <label>Timeout:</label>
        <property>wasTimeout</property>
        <documentation>
            Specifies the waiting time before cluster start times out and returns an error.
        </documentation>
        <required>0</required>
        <value>300</value>
    </formElement>
</editor>
